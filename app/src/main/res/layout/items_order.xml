<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    android:background="@drawable/menu_item_no_choose"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/itemsOrderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Com Nguoi ajss"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/black"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/itemsOrderPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Com Nguoi ajss"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/black"
        android:layout_alignParentEnd="true"/>
    <RelativeLayout
        android:layout_width="@dimen/_300sdp"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/itemsOrderPrice"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/increaseItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plus_16"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:id="@+id/amountItem"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:layout_toLeftOf="@id/increaseItem"
            android:textAlignment="center"/>
        <ImageView
            android:id="@+id/decreaseItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/minus_16"
            android:layout_toLeftOf="@id/amountItem"/>
    </RelativeLayout>
</RelativeLayout>